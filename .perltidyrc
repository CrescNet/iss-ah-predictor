-pbp         # Start with Perl Best Practices
-w           # Show all warnings
# -iob         # Ignore old breakpoints
-bom         # breaks before arrows ("->") are preserved
-l=120       # 120 characters per line
-mbl=2       # No more than 2 blank lines
-i=2         # Indentation is 2 columns
-ci=2        # Continuation indentation is 2 columns
-vt=0        # Less vertical tightness
-pt=2        # High parenthesis tightness
-bt=1        # High brace tightness
-sbt=1       # High square bracket tightness
-bbt=0       # low tightness for curly braces
-wn          # Weld nested containers
-isbc        # Don't indent comments without leading space
-nst         # Don't output to STDOUT
-b           # Create backup file and modify in-place
-nwls="."    # No left side whitespace for "." operator
-ole=unix    # Use unix line ending "\n"
-bext='/bak' # Delete backup file if there are no errors